@model PassonProject.Models.PlaylistDTO

@{
    ViewData["Title"] = "Delete Playlist";
}

<h1>@ViewData["Title"]</h1>

<div class="playlist-details">
    <h2>Are you sure you want to delete the playlist?</h2>

    <div class="form-group">
        <p><strong>Playlist Name:</strong> @Model.PlaylistName</p>
        <p><strong>Description:</strong> @Model.PlaylistDescription</p>
        <p><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
    </div>

    <div class="form-group">
        <form method="post" asp-action="Delete" asp-route-id="@Model.PlaylistId">
          
            <button type="submit" class="btn btn-danger">Yes, Delete Playlist</button>
            <a href="@Url.Action("List", "PlaylistPage")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@model PassonProject.Models.PlaylistDTO

@{
    ViewData["Title"] = "Add New Playlist";
}

<h1>@ViewData["Title"]</h1>

<!-- Form to Add a New Playlist -->
<form asp-action="Add" method="post">
    
    <div class="form-group">
        <label for="PlaylistName">Playlist Name</label>
        <input type="text" id="PlaylistName" name="PlaylistName" class="form-control" value="@Model.PlaylistName" required />
        <span asp-validation-for="PlaylistName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PlaylistDescription">Playlist Description</label>
        <textarea id="PlaylistDescription" name="PlaylistDescription" class="form-control" required>@Model.PlaylistDescription</textarea>
        <span asp-validation-for="PlaylistDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CreatedAt">Created At</label>
        <input type="datetime-local" id="CreatedAt" name="CreatedAt" class="form-control" value="@Model.CreatedAt.ToString("yyyy-MM-ddTHH:mm")" required />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Playlist</button>
    </div>
</form>

<!-- Validation Scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

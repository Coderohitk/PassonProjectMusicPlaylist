@model PassonProject.Models.SongDTO

@{
    ViewData["Title"] = "Edit Song";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<form asp-action="Edit" asp-route-id="@Model.SongId" method="post" class="mx-auto" style="max-width: 600px;">
    <input type="hidden" name="SongId" value="@Model.SongId" />

    <!-- Title Input -->
    <div class="form-group">
        <label for="Title" class="font-weight-bold">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        @if (ViewData.ModelState["Title"]?.Errors.Count > 0)
        {
            <div class="text-danger">
                @ViewData.ModelState["Title"].Errors.FirstOrDefault()?.ErrorMessage
            </div>
        }
    </div>

    <!-- Artist Input -->
    <div class="form-group">
        <label for="Artist" class="font-weight-bold">Artist</label>
        <input type="text" class="form-control" id="Artist" name="Artist" value="@Model.Artist" required />
        @if (ViewData.ModelState["Artist"]?.Errors.Count > 0)
        {
            <div class="text-danger">
                @ViewData.ModelState["Artist"].Errors.FirstOrDefault()?.ErrorMessage
            </div>
        }
    </div>

    <!-- Genre Input -->
    <div class="form-group">
        <label for="Genre" class="font-weight-bold">Genre</label>
        <input type="text" class="form-control" id="Genre" name="Genre" value="@Model.Genre" required />
        @if (ViewData.ModelState["Genre"]?.Errors.Count > 0)
        {
            <div class="text-danger">
                @ViewData.ModelState["Genre"].Errors.FirstOrDefault()?.ErrorMessage
            </div>
        }
    </div>

    <!-- Release Date Input -->
    <div class="form-group">
        <label for="ReleaseDate" class="font-weight-bold">Release Date</label>
        <input type="date" class="form-control" id="ReleaseDate" name="ReleaseDate" value="@Model.ReleaseDate.ToString("yyyy-MM-dd")" required />
        @if (ViewData.ModelState["ReleaseDate"]?.Errors.Count > 0)
        {
            <div class="text-danger">
                @ViewData.ModelState["ReleaseDate"].Errors.FirstOrDefault()?.ErrorMessage
            </div>
        }
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success btn-lg">Update Song</button>
        <a href="@Url.Action("List", "SongPage")" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
</form>

<!-- Add Custom Styles -->
<style>
    h1 {
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
        color: #333;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        font-size: 1.125rem;
    }

    .form-control {
        font-size: 1rem;
        padding: 0.75rem;
        border-radius: 0.375rem;
    }

    .btn {
        font-weight: bold;
        padding: 0.5rem 1.5rem;
        border-radius: 0.375rem;
    }

    .btn-lg {
        font-size: 1.125rem;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #4e555b;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>
